# ssh_config(5) man page.

Host ec2 ioannis postgres nosql 
	IdentityFile ~/.ssh/amzn_john.pem
	Hostname   ec2-54-191-127-143.us-west-2.compute.amazonaws.com
	SendEnv               AWS_ACCESS_KEY  AWS_SECRET_KEY   EC2_URL
	BatchMode             yes
        UserKnownHostsFile    /dev/null
	StrictHostKeyChecking no
	ConnectTimeout        7


Host qa qa.tax-guard.com
	#User taxguard
	User ioannis
	Hostname   qa.tax-guard.com
	SendEnv LC_PGUSER
	SendEnv LC_PGDATABASE
	SendEnv LC_PGPASSWORD
	ProxyCommand ssh -q -A taxguard@tools.tax-guard.com nc %h %p

Host *.tax-guard.com
        User       taxguard
	Compression yes 
	ControlMaster auto
	ControlPath ~/.ssh/master-%r@%h:%p
	ForwardAgent yes

Host dev01
	IdentityFile ~/.ssh/parkme.pem  
	User       ioannis
	Hostname   dev01.parkme.com
	BatchMode             yes
	ServerAliveInterval   60

Host *
	PermitLocalCommand	yes
	SendEnv			LANG  LC_*  FRUIT
	#SetupTimeOut		10	
	BatchMode		no
	#PasswordAuthentication   no
	PasswordAuthentication   yes
	RhostsRSAAuthentication	 no
	#Compression 		 yes
	#RSAAuthentication       no
	#RhostsAuthentication   	 no
	#CheckHostIP             yes
	#StrictHostKeyChecking   ask
	#FallBackToRsh		 no

