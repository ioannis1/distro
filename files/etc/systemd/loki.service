
[Unit]
Description=Grafana's file aggregator
After = network.target
ConditionPathExists=/etc/grafana/loki.yaml

#WorkingDirectory=/home/postgres/main

#KillUserProcesses=yes


[Service]
Type=simple
TimeoutStartSec=0
#Type=notify
ExecStart=/usr/local/bin/loki-linux-amd64 -config.file=/etc/grafana/loki.yaml
ExecStop=/bin/kill -TERM  $MAINPID
ExecReload=/bin/kill -HUP  $MAINPID
#OOMScoreAdjust=-900
#User=postgres
#Environment=PGDATA=/home/postgres/main
#Environment=PGCONFIG=/home/postgres/dist-main/bin/pg_config

#Group=postgres
#Restart=on-failure


RemoveIPC=no

#RemainAfterExit=on

[Install]
WantedBy=multi-user.target
