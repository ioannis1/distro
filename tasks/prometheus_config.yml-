- name:        default prometheus exporters
  copy:        src="etc/default/prometheus-{{ item }}-exporter"   dest="/etc/default"    owner=postgres   
  with_items:
      - postgres
      - node

- name:        reload  prometheus exporters
  shell:       "/etc/init.d/prometheus-{{ item }}-exporter    force-reload"
  with_items:
      - postgres
      - node

